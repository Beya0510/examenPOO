@page "/deposit"
@using global::TheBanks.Models
@using global::TheBanks.Services
@inject BankService BankService
@inject IJSRuntime JSRuntime

<EditForm Model="@_depositModel" OnValidSubmit="HandleDeposit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label>Compte</label>
        <InputSelect @bind-Value="_depositModel.AccountNumber">
            <option value="">Sélectionnez un compte</option>
            @foreach (var account in BankService.Bank.Accounts.Values)
            {
                <option value="@account.Number">@account.Number</option>
            }
        </InputSelect>
        <ValidationMessage For="@(() => _depositModel.AccountNumber)" />
    </div>

    <div class="form-group">
        <label>Montant</label>
        <InputNumber @bind-Value="_depositModel.Amount" class="form-control" />
        <ValidationMessage For="@(() => _depositModel.Amount)" />
    </div>

    <button type="submit" class="btn btn-success">Déposer</button>
</EditForm>

@code {
    private DepositModel _depositModel = new();
    public int Balance { get; private set; }

    private async Task HandleDeposit()
    {
        try
        {
            var account = BankService.Bank.Accounts[_depositModel.AccountNumber];
            account.Deposit(_depositModel.Amount); // Appelle la méthode de dépôt

            // Sauvegarde des données de la banque
            await BankService.SaveBankData();

            await JSRuntime.InvokeVoidAsync("alert", "Dépôt effectué avec succès !");
        }
        catch (Exception ex)
        {
            // Gestion des erreurs
            await JSRuntime.InvokeVoidAsync("alert", $"Erreur lors du dépôt : {ex.Message}");
        }
    }
}